<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:minHeight="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/strHpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOL.1286"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/strAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Hello World · 作品"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/strContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/strHpTitle"
                android:layout_marginTop="12dp"
                android:text="梦，真是人活着最奇怪的东西，那么私密亲切到仿佛跟自己都不好透露，可又遥远恍惚得好像跟你没相干，是个陌生人的造访。by 唐诺"
                android:textSize="15sp"/>

        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>